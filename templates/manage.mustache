{{!
    @template local_cloudsync/manage

    Admin search input for page header.

    Example context (json):
    {


    }
}}

<div class="row mb-5">
    <div class="col">
        <h1>{{#str}} mycloudheading, local_cloudsync {{/str}}</h1>
    </div>
    <div class="col">
        <input type="button" class="btn btn-primary float-right" onclick="location.href='{{accessurl}}'" value="{{#str}} request, local_cloudsync {{/str}}">
    </div>
</div>
{{#machines}}
    <div class="mt-2 mb-5 card">
        <div class="card-body">
            <div class="row">
                <div class="col h5">
                    <a class="link-text"><b>{{name}}</b></a>
                </div>
                <div class="col justify-content-end">
                    <input type="button" class="btn btn-primary float-right ml-2" value="{{#str}} rename, local_cloudsync {{/str}}">
                    <input type="button" class="btn btn-danger float-right" value="{{#str}} delete, local_cloudsync {{/str}}" onclick="location.href='{{deleteurl}}?vm={{id}}'">
                </div>
            </div>
        </div>
    </div>
{{/machines}}

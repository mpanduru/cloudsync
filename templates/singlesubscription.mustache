    <h2 class="mb-6">{{#str}} subscriptionvmsheader, local_cloudsync {{/str}}<b>{{subscription_name}}</b></h2>
    <div class="justify-content-center mt-5">
    {{#vms}}
        <li class="list-group-item d-flex justify-content-between align-items-center border-primary text-center">
            <span><b>{{#str}} subscriptionvmsvmname, local_cloudsync {{/str}}</b><br>{{name}}</span>

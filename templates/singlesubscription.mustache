            <span><b>{{#str}} subscriptionvmsvmtype, local_cloudsync {{/str}}</b><br>{{type}}</span>
            <span><b>{{#str}} subscriptionvmsvmstatus, local_cloudsync {{/str}}</b><br>{{status}}</span>
            <span><b>{{#str}} subscriptionvmslastused, local_cloudsync {{/str}}</b><br>{{hr_accessed_at}}</span>
            <span class="badge badge-primary link-text" onclick="location.href='{{vm_url}}'">{{#str}} subscriptionvmsgoto, local_cloudsync {{/str}}</span>

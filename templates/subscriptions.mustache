{{!
    @template local_cloudsync/subscriptions

    Admin search input for page header.

    Example context (json):
    {


    }
}}

<div>
    <div class="row">
        <div class="col mb-6">
            <h3>{{#str}} activecloudsubscription, local_cloudsync {{/str}}</h3>
        </div>
        <div class="col">
            <input type="button" class="btn btn-primary float-right" onclick="location.href='{{new_subscription_url}}'" value="{{#str}} newsubscription, local_cloudsync {{/str}}">
        </div>
    </div>
    <div class="row">
    {{#subscriptions}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><b>{{name}}</b></h5>
                    <p class="card-text ml-1"><b>{{#str}} cloudprovidersubscription, local_cloudsync {{/str}}</b> {{provider_name}}</p>
                    <div class="row">
                        <div class="col">
                            <button class="btn btn-primary float-none" onclick="location.href='{{subscriptionvms_url}}?id={{id}}'">{{#str}} viewsubscription, local_cloudsync {{/str}}</button>
                        </div>
                        <div class="col">
                            <button class="btn btn-danger float-none" onclick="location.href='{{delete_subscription_url}}?subscription={{id}}'">{{#str}} deletesubscription, local_cloudsync {{/str}}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/subscriptions}}
    </div>
</div>
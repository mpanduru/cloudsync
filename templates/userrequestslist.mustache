{{!
    @template local_cloudsync/userrequestslist

    Admin search input for page header.

    Example context (json):
    {


    }
}}

<h2 class="mb-5">{{#str}} userreqlistheader, local_cloudsync {{/str}}</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">{{#str}} userreqlistvm, local_cloudsync {{/str}}</th>
            <th scope="col">{{#str}} userreqliststatus, local_cloudsync {{/str}}</th>
            <th scope="col">{{#str}} userreqlistreqdate, local_cloudsync {{/str}}</th>
            <th scope="col">{{#str}} userreqlistrespdate, local_cloudsync {{/str}}</th>
        </tr>
    </thead>
    <tbody>
    {{#requests}}
        <tr>
            <td>{{vm_name}}</td>
            <td>{{status}}</td>
            <td>{{#userdate}} {{created_at}} {{/userdate}}</td>
            <td>
            {{#closed_at}}
                {{#userdate}} {{closed_at}} {{/userdate}}
            {{/closed_at}}
            {{^closed_at}}
                {{#str}} userreqlistnotclosed, local_cloudsync {{/str}}
            {{/closed_at}}
            </td>
            <td><span class="badge badge-primary link-text" onclick="location.href='{{req_url}}?id={{id}}'">{{#str}} subscriptionvmsgoto, local_cloudsync {{/str}}</span></td>
        </tr>
    {{/requests}}
    </tbody>
</table>